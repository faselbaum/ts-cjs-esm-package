{
  "include": ["src/**/*", "compat/esm/**/*"],
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/__types__",
    "module": "ESNext",
    "moduleResolution": "Node16",
    "outDir": "dist/__esm__",
    "paths": {
      "#compat/*": ["../compat/esm/*"]
    }
  }
}
